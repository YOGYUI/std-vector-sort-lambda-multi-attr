{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "windows-g++-build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${fileDirname}\\main.cpp",
                "-o",
                "${fileDirname}\\main.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "windows-gcc-build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",
                "${fileDirname}\\main.cpp",
                "-o",
                "${fileDirname}\\main.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "windows-execute",
            "command": "cmd",
            "group": "test",
            "args": [
                "/C",
                "${fileDirname}\\main.exe"
            ]
        },
        {
            "label": "linux-g++-build",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${workspaceFolder}/src/main.cpp",
                "-o",
                "${workspaceFolder}/out/main"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "linux-gcc-build",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${workspaceFolder}/src/main.cpp",
                "-o",
                "${workspaceFolder}/out/main"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "linux-execute",
            "command": "bash",
            "group": "test",
            "args": [
                "-c",
                "${workspaceFolder}/out/main"
            ]
        }
    ]
}